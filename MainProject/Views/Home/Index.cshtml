@{
    ViewData["Title"] = "LandingPage";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@{
    if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="py-3">
                        Employees Data
                    </h3>
                </div>
            </div>
            <div class="row">
                @if (User.IsInRole(Roles.Manager) || User.IsInRole(Roles.SuperAdmin))
                {
                    
                <div class="col-12 my-3">
                    <a class="p-3 btn btn-success"
               asp-area=""
               asp-controller="Employee"
               asp-action="Create">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
                }


                <div class="col-12 mt-1">
                    <hr />

                    <div class="mt-5">
                        <table id="DeptDatatable"
                           class="table table-striped table-bordered dt-responsive nowrap text-center"
                           width="100%"
                           cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Full Name</th>
                                    <th>Salary</th>
                                    <th>Manager</th>
                                    <th>image</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal fade" id="ImageModal" tabindex="-1" role="dialog" aria-labelledby="ImageModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 style="display: inline-block" class="modal-title" id="ImageModalLabel">Employee Image </h2>
                    </div>
                    <div class="modal-body">
                        <img id="img" src="#" style="width:100%;" alt=" Images" />
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    }
}


@section Scripts
{
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/UserDataTable.js"></script>

}